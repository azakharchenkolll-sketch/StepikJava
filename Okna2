import javax.swing.*;

public class Main {
    public static void main(String[] args) {
        // –ø–µ—Ä–≤—ã–π –≤–æ–ø—Ä–æ—Å
        int answer1 = JOptionPane.showConfirmDialog(
                null,
                "–í–∞–º –Ω—Ä–∞–≤–∏—Ç—Å—è –∫–æ—Ñ–µ?",
                "–í–æ–ø—Ä–æ—Å 1",
                JOptionPane.YES_NO_OPTION);

        // –≤—Ç–æ—Ä–æ–π –≤–æ–ø—Ä–æ—Å
        int answer2 = JOptionPane.showConfirmDialog(
                null,
                "–í—ã –ª—é–±–∏—Ç–µ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞—Ç—å?",
                "–í–æ–ø—Ä–æ—Å 2",
                JOptionPane.YES_NO_OPTION);

        String message;

        // –æ–±—Ä–∞–±–∞—Ç—ã–≤–∞–µ–º –≤—Å–µ 4 —Å–ª—É—á–∞—è
        if (answer1 == JOptionPane.YES_OPTION && answer2 == JOptionPane.YES_OPTION) {
            message = "–û—Ç–ª–∏—á–Ω–æ! –ö–æ—Ñ–µ –∏ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏–µ ‚Äî –∏–¥–µ–∞–ª—å–Ω–∞—è –ø–∞—Ä–∞ ‚òïüíª";
        } else if (answer1 == JOptionPane.YES_OPTION && answer2 == JOptionPane.NO_OPTION) {
            message = "–ö–æ—Ñ–µ –µ—Å—Ç—å, –∞ –∫–æ–¥–∏—Ç—å –Ω–µ –ª—é–±–∏—Ç–µ ‚Äî —Å—Ç—Ä–∞–Ω–Ω–æ–µ —Å–æ—á–µ—Ç–∞–Ω–∏–µ üòÖ";
        } else if (answer1 == JOptionPane.NO_OPTION && answer2 == JOptionPane.YES_OPTION) {
            message = "–ó–Ω–∞—á–∏—Ç, –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä—É–µ—Ç–µ –±–µ–∑ –∫–æ—Ñ–µ? –£–≤–∞–∂—É—Ö–∞ üëè";
        } else {
            message = "–ù–µ –ª—é–±–∏—Ç–µ –Ω–∏ –∫–æ—Ñ–µ, –Ω–∏ –∫–æ–¥‚Ä¶ —á—Ç–æ –∂, —É –∫–∞–∂–¥–æ–≥–æ —Å–≤–æ–π –ø—É—Ç—å üôÇ";
        }

        // –∏—Ç–æ–≥–æ–≤–æ–µ –æ–∫–Ω–æ
        JOptionPane.showMessageDialog(
                null,
                message,
                "–†–µ–∑—É–ª—å—Ç–∞—Ç",
                JOptionPane.INFORMATION_MESSAGE
        );
    }
}
